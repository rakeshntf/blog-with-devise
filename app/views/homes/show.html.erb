<%- model_class = Home -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @home.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @home.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar_file_name) %>:</strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:avatar_updated_at) %>:</strong></dt>
  <dd><%= @home.avatar_updated_at %></dd>

<p>
  <b>Avtar:</b>
</p>

<%= image_tag @home.avatar.url(:medium) %>
<br/><br/><br/>


  
</dl>
<p>
<%= render "comments/form" %>
<br>
</p>
<p>
      <p class="text-success">
      <h3>Comments (<%= @home.comments.size %>)</h3>
      <% @home.comments.each do |comment| %>
      <p>
      <%= link_to "hide", '#', class: "hide-comments"  %>
      <%= comment.body   %><p>
      <%end%>
      </p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              homes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_home_path(@home), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              home_path(@home),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
